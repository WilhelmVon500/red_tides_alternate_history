on-arrival: budget -= 3; upper_tax_rates -= 1; lower_tax_rates -= 1; new_middle_nlp += 5*(1-dissent); old_middle_nlp += 5*(1-dissent); workers_nlp += 3*(1-dissent); unemployed -= 1.5 if unemployed >= 5; capital_strike_progress -= 1 if upper_tax_rates < 0; inflation += 1; economic_growth += 0.6;

